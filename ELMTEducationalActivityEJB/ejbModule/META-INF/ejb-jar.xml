<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <display-name>HLCEducationalActivityEJB</display-name>
    <enterprise-beans>
        <session>
            <display-name>HLCEducationalSessionBean</display-name>
            <ejb-name>HLCEducationalSessionBean</ejb-name>
            <home>com.hlcevent.edu.HLCEducationalSessionRemoteHome</home>
            <remote>com.hlcevent.edu.HLCEducationalSessionRemote</remote>
            <ejb-class>com.hlcevent.edu.HLCEducationalSessionBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        
        <entity>
            <display-name>HLCActivityOrganizerBean</display-name>
            <ejb-name>HLCActivityOrganizerBean</ejb-name>
            <local-home>com.hlcevent.activity.HLCActivityOrganizerLocalHome</local-home>
            <local>com.hlcevent.activity.HLCActivityOrganizerLocal</local>
            <ejb-class>com.hlcevent.activity.HLCActivityOrganizerBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
        
        <entity>
            <display-name>HLCPublicationBean</display-name>
            <ejb-name>HLCPublicationBean</ejb-name>
            <local-home>com.hlcevent.activity.HLCPublicationLocalHome</local-home>
            <local>com.hlcevent.activity.HLCPublicationLocal</local>
            <ejb-class>com.hlcevent.activity.HLCPublicationBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
        
        <entity>
            <display-name>HLCActivityUserBean</display-name>
            <ejb-name>HLCActivityUserBean</ejb-name>
            <local-home>com.hlcevent.activity.HLCActivityUserLocalHome</local-home>
            <local>com.hlcevent.activity.HLCActivityUserLocal</local>
            <ejb-class>com.hlcevent.activity.HLCActivityUserBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
        <entity>
            <display-name>HLCOrganizerRecapBean</display-name>
            <ejb-name>HLCOrganizerRecapBean</ejb-name>
            <local-home>com.hlcevent.activity.HLCOrganizerRecapLocalHome</local-home>
            <local>com.hlcevent.activity.HLCOrganizerRecapLocal</local>
            <ejb-class>com.hlcevent.activity.HLCOrganizerRecapBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>HLCEducationalSessionBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>HLCActivityOrganizerBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>HLCPublicationBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>HLCActivityUserBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>HLCOrganizerRecapBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
