<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <display-name>PaymentBeanEJB</display-name>
    <enterprise-beans>
        <session>
            <display-name>PaymentSessionSB</display-name>
            <ejb-name>HLCPaymentSessionBean</ejb-name>
            <home>com.hlcpayment.HLCPaymentSessionRemoteHome</home>
            <remote>com.hlcpayment.HLCPaymentSessionRemote</remote>
            <ejb-class>com.hlcpayment.HLCPaymentSessionBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <entity>
            <display-name>PaymentEB</display-name>
            <ejb-name>HLCPaymentProcessBean</ejb-name>
            <local-home>com.hlcpayment.HLCPaymentLocalHome</local-home>
            <local>com.hlcpayment.HLCPaymentLocal</local>
            <ejb-class>com.hlcpayment.HLCPaymentBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>HLCPaymentProcessBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>HLCPaymentSessionBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
