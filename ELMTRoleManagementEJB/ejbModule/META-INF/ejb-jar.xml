<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <display-name>RoleManagementEJB</display-name>
    <enterprise-beans>
        <session>
            <display-name>BrahmaputraSessionSB</display-name>
            <ejb-name>HLCBrahmaputraSessionBean</ejb-name>
            <home>com.hlcmrm.rolemanagement.HLCBrahmaputraSessionRemoteHome</home>
            <remote>com.hlcmrm.rolemanagement.HLCBrahmaputraSessionRemote</remote>
            <ejb-class>com.hlcmrm.rolemanagement.HLCBrahmaputraSessionBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
      
        <entity>
            <display-name>PrivilegeEB</display-name>
            <ejb-name>HLCPrivilegeBean</ejb-name>
            <local-home>com.hlcmrm.rolemanagement.masters.HLCPrivilegeLocalHome</local-home>
            <local>com.hlcmrm.rolemanagement.masters.HLCPrivilegeLocal</local>
            <ejb-class>com.hlcmrm.rolemanagement.masters.HLCPrivilegeBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
        <entity>
            <display-name>RoleMasterEB</display-name>
            <ejb-name>HLCRoleMasterBean</ejb-name>
            <local-home>com.hlcmrm.rolemanagement.masters.HLCRoleMasterLocalHome</local-home>
            <local>com.hlcmrm.rolemanagement.masters.HLCRoleMasterLocal</local>
            <ejb-class>com.hlcmrm.rolemanagement.masters.HLCRoleMasterBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
        <entity>
            <display-name>MapPrevilegeEB</display-name>
            <ejb-name>HLCMapPrevilegeBean</ejb-name>
            <local-home>com.hlcmrm.maps.HLCMapPrevilegeLocalHome</local-home>
            <local>com.hlcmrm.maps.HLCMapPrevilegeLocal</local>
            <ejb-class>com.hlcmrm.maps.HLCMapPrevilegeBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
        <entity>
            <display-name>MapUserEB</display-name>
            <ejb-name>HLCMapUserBean</ejb-name>
            <local-home>com.hlcmrm.maps.HLCMapUserLocalHome</local-home>
            <local>com.hlcmrm.maps.HLCMapUserLocal</local>
            <ejb-class>com.hlcmrm.maps.HLCMapUserBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>HLCBrahmaputraSessionBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
     
        <container-transaction>
            <method>
                <ejb-name>HLCPrivilegeBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>HLCRoleMasterBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>HLCMapPrevilegeBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>HLCMapUserBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
