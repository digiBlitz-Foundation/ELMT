<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <display-name>MRMRefund</display-name>
    <enterprise-beans>
        <session>
            <display-name>RefundSessionSB</display-name>
            <ejb-name>HLCRefundSessionBean</ejb-name>
            <home>com.hlcmrm.statless.HLCRefundSessionRemoteHome</home>
            <remote>com.hlcmrm.statless.HLCRefundSessionRemote</remote>
            <ejb-class>com.hlcmrm.statless.HLCRefundSessionBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <entity>
            <display-name>RefundDetailsEB</display-name>
            <ejb-name>HLCRefundDetailsBean</ejb-name>
            <local-home>com.hlcmrm.refund.HLCRefundDetailsLocalHome</local-home>
            <local>com.hlcmrm.refund.HLCRefundDetailsLocal</local>
            <ejb-class>com.hlcmrm.refund.HLCRefundDetailsBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>HLCRefundDetailsBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>HLCRefundSessionBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
