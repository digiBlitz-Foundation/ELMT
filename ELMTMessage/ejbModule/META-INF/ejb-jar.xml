<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <display-name>Message</display-name>
    <enterprise-beans>
        <session>
            <display-name>MessageSessionSB</display-name>
            <ejb-name>HLCMessageSessionBean</ejb-name>
            <home>com.hlcmsg.session.HLCMessageSessionRemoteHome</home>
            <remote>com.hlcmsg.session.HLCMessageSessionRemote</remote>
            <ejb-class>com.hlcmsg.session.HLCMessageSessionBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <entity>
            <display-name>MessagingEntityEB</display-name>
            <ejb-name>HLCMessagingEntityBean</ejb-name>
            <local-home>com.hlcmsg.entity.HLCMessagingEntityLocalHome</local-home>
            <local>com.hlcmsg.entity.HLCMessagingEntityLocal</local>
            <ejb-class>com.hlcmsg.entity.HLCMessagingEntityBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
        
        <entity>
            <display-name>MessagedistributionEntityEB</display-name>
            <ejb-name>HLCMessagedistributionEntityBean</ejb-name>
            <local-home>com.hlcmsg.distribution.HLCMessagedistributionEntityLocalHome</local-home>
            <local>com.hlcmsg.distribution.HLCMessagedistributionEntityLocal</local>
            <ejb-class>com.hlcmsg.distribution.HLCMessagedistributionEntityBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>HLCMessagingEntityBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>HLCMessageSessionBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        
        <container-transaction>
            <method>
                <ejb-name>HLCMessagedistributionEntityBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
